{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/config.schema.json",
  "grammars": [
    {
      "name": "glint",
      "camelcase": "Glint",
      "title": "Glint",
      "scope": "source.glint",
      "file-types": [
        "glt",
        "glnt",
        "g",
        "gnt",
        "glint"
      ],
      "injection-regex": "^glint$",
      "class-name": "TreeSitterGlint"
    }
  ],
  "metadata": {
    "version": "0.2.2",
    "license": "MIT",
    "description": "Parser for the Glint Programming Language (LCC)",
    "authors": [
      {
        "name": "lens_r",
        "email": "lensplaysgames@gmail.com",
        "url": "https://github.com/LensPlaysGames"
      }
    ],
    "links": {
      "repository": "https://github.com/LensPlaysGames/tree-sitter-glint",
      "funding": "https://www.paypal.com/donate/?hosted_button_id=62KQ4GX6HFTNG"
    }
  },
  "bindings": {
    "c": true,
    "go": true,
    "node": true,
    "python": true,
    "rust": true,
    "swift": true,
    "zig": false
  }
}
